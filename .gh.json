{
    "api_version": "2",
    "default_issue_component": {
        "LPS": "UI"
    },
    "default_issue_type": {
        "LPS": "Bug"
    },
    "default_issue_version": {
        "LPS": "6.2.X"
    },
    "hooks": {
        "pull-request": {
            "close": {
                "before": [],
                "after": [
                    { "cmd": "gh", "args": ["jira", "{{jira.number.previous}}"] }
                ]
            },
            "fetch": {
                "before": [],
                "after": [
                    "{{#if jira.number.current}} gh jira {{jira.number.current}} --comment 'Just started reviewing :)' {{/if}}"
                ]
            },
            "fwd": {
                "before": [],
                "after": [
                    "{{#if options.changes}}{{#if jira.number.current}} gh jira {{jira.number.current}} --comment 'Pull request forwarded to {{forwardedLink}}. [See changes here.]({{compareLink}})' {{/if}}{{/if}}",
                    { "cmd": "gh", "args": ["jira", "{{jira.number.current}}", "--assignee", "{{options.fwd}}", "--submittedLink", "{{forwardedLink}}"] }
                ]
            },
            "merge": {
                "before": [],
                "after": [
                    "{{#if options.changes}}{{#if jira.number.previous}} gh jira {{jira.number.previous}} --comment 'Thank you, pull request merged! [See changes here.]({{compareLink}})' {{/if}}{{/if}}",
                    { "cmd": "gh", "args": ["jira", "{{jira.number.previous}}"] }
                ]
            },
            "submit": {
                "before": [],
                "after": [
                    "{{#if options.changes}}{{#if jira.number.previous}} gh jira {{jira.number.previous}} --comment 'Pull request submitted to {{submittedLink}}. [See changes here.]({{compareLink}})' {{/if}}{{/if}}",
                    { "cmd": "gh", "args": ["jira", "{{jira.number.previous}}", "--assignee", "{{options.submit}}", "--submittedLink", "{{submittedLink}}"] }
                ]
            }
        }
    },
    "host": "issues.liferay.com",
    "password": "",
    "port": "",
    "protocol": "https",
    "transition": {
        "Close Issue": {
            "Fix Version/s": true
        },
        "Create Review Request": {
            "Assignee": {
                "name": "{{options.assignee}}"
            },
            "Git Pull Request": "{{options.submittedLink}}"
        },
        "Open Issue": {
            "Assignee": {
                "name": "{{options.assignee}}"
            }
        },
        "Reassign Review Request": {
            "Assignee": {
                "name": "{{options.assignee}}"
            },
            "Git Pull Request": "{{options.submittedLink}}"
        },
        "Start Progress": {
            "Assignee": {
                "name": "{{jira.user}}"
            }
        }
    },
    "user": ""
}